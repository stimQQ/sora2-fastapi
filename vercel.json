{
  "buildCommand": "pip install -r requirements-vercel.txt",
  "regions": ["sin1"],
  "env": {
    "VERCEL": "1",
    "ENVIRONMENT": "production",
    "PYTHONUNBUFFERED": "1"
  },
  "functions": {
    "api/**/*.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ]
}
